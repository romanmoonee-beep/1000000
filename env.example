# Environment
NODE_ENV=development
HOST=localhost
PORT=3000
API_PORT=3001
LOG_LEVEL=info

# Для продакшена поменяйте HOST на IP или домен сервера:
# HOST=89.169.46.66
# или
# HOST=yourdomain.com

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/cargoexpress

# Redis
REDIS_URL=redis://localhost:6379

# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook/telegram
TELEGRAM_WEBHOOK_SECRET=your_webhook_secret

# JWT Secrets (generate strong random strings)
JWT_SECRET=your_jwt_secret_here_at_least_32_characters
REFRESH_TOKEN_SECRET=your_refresh_token_secret_here_at_least_32_characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# API URLs (необязательно - автоматически генерируются из HOST и портов)
# API_URL=http://89.169.46.66:3001
# FRONTEND_URL=http://89.169.46.66:3000
# ADMIN_DASHBOARD_URL=http://89.169.46.66:3000/admin-dashboard

# File Storage
STORAGE_TYPE=local
STORAGE_PATH=./uploads

# AWS S3 (optional, if using S3 storage)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_id
AWS_SECRET_ACCESS_KEY=your_secret_access_key
AWS_S3_BUCKET=your_bucket_name

# Cloudinary (optional, if using Cloudinary storage)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Payment Systems
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

SBER_MERCHANT_ID=your_merchant_id
SBER_SECRET_KEY=your_secret_key

CRYPTO_BOT_TOKEN=your_crypto_bot_token

# External APIs
EXCHANGE_RATE_API_KEY=your_api_key

# Email (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password
EMAIL_FROM=noreply@cargoexpress.com

# Security (необязательно - автоматически генерируется из HOST)
# CORS_ORIGIN=http://89.169.46.66:3000,http://89.169.46.66:3000/admin-dashboard
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn

# Development (optional)
WEBHOOK_NGROK_URL=https://your-ngrok-url.ngrok.io